<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demosliding.MainActivity"
    tools:ignore="MergeRootFrame" >

    <com.example.demosliding.MyScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.example.demosliding.MyLinearlayout
            android:id="@+id/mylinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/trance_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_height"
                android:background="#343434"
                android:gravity="center"
                android:text="测试"
                android:textColor="#ffffff" />

            <LinearLayout
                android:id="@+id/linear_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:background="#00f0f0"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:text="dada" />
            </LinearLayout>
        </com.example.demosliding.MyLinearlayout>
    </com.example.demosliding.MyScrollView>

    <com.example.demosliding.TopView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:layout_gravity="top"
            android:background="#ff0000"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_top_real"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:layout_gravity="top"
            android:background="#ff0000"
            android:gravity="center"
            android:visibility="visible" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="测试" />
        </LinearLayout>
    </com.example.demosliding.TopView>

</RelativeLayout>